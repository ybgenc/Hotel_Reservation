@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Staff</h4>
            <div class="basic-form">
                <form method="post">
                    <div class="form-group">
                        <input asp-for="StaffID" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for=Name type="text" class="form-control input-rounded" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input asp-for=Title type="text" class="form-control input-rounded" placeholder="Title">
                    </div>
                    <label>Instagram</label>
                    <div class="form-group">
                        <input asp-for=Instagram type="text" class="form-control input-rounded" placeholder="Instagram Link">
                    </div>
                    <label>Facebook</label>
                    <div class="form-group">
                        <input asp-for=Facebook type="text" class="form-control input-rounded" placeholder="Facebook Link">
                    </div>
                    <label>Twitter</label>
                    <div class="form-group">
                        <input asp-for=Twitter type="text" class="form-control input-rounded" placeholder="Twitter Link">
                    </div>
                    <button class="btn mb-1 btn-rounded btn-success">Update!</button>
                </form>
            </div>
        </div>
    </div>
</div>

