@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
    int count = 0;
}
<div class="col-lg">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h3 class="card-title">Testimonial list</h3>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="text-center">
                            <th>#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Delete</th>
                            <th>Update</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="text-center">
                                <th>@count</th>
                                <td>@item.Image</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-danger">Delete</a></td>
                                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-warning">Update</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Testimonial/CreateTestimonial/" class="btn mb-1 btn-rounded btn-primary">Create Testimonial</a>
            </div>
        </div>
    </div>
</div>