@model UpdateTestimonialViewModel
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Testimonial</h4>
            <div class="basic-form">
                <form method="post">
                    <div class="form-group">
                        <input asp-for="TestimonialID" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for=Name type="text" class="form-control input-rounded" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input asp-for=Title type="text" class="form-control input-rounded" placeholder="Title">
                    </div>
                    <label>Description</label>
                    <div class="form-group">
                        <input asp-for=Description type="text" class="form-control input-rounded" placeholder="Description">
                    </div>
                    <label>Image</label>
                    <div class="form-group">
                        <input asp-for=Image type="text" class="form-control input-rounded" placeholder="Image">
                    </div>
                    <button class="btn mb-1 btn-rounded btn-success">Update!</button>
                </form>
            </div>
        </div>
    </div>
</div>


