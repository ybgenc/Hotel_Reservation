@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
    int count = 0;
}
<div class="col-lg">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h3 class="card-title">Service list</h3>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="text-center">
                            <th>#</th>
                            <th>Icon</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Delete</th>
                            <th>Update</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="text-center">
                                <th>@count</th>
                                <td>@item.ServiceIcon</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn mb-1 btn-rounded btn-danger">Delete</a></td>
                                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-rounded btn-warning">Update</a></td>
                                <td><a href="#" class="btn mb-1 btn-rounded btn-info">Detail</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Service/CreateService/" class="btn mb-1 btn-rounded btn-primary">Create Service</a>
            </div>
        </div>
    </div>
</div>

